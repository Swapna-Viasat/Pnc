<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg" >

    <!--
    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bg" >
    </RelativeLayout>
    -->

    <TextView
        android:id="@+id/txt_ActivityDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Activity Details"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ActivityDetails"
        android:layout_margin="10dp"
        android:background="#80FFFFFF" >

        <TableLayout
            android:id="@+id/tableLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"     
            >

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:text="Pilot Boat ID"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_PilotBoatID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" 
                    android:lines="1"
                    android:gravity="center"
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"                   
                    android:text="Pilot Boat Start Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/edt_BoatSDT"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                     android:lines="1"
                    android:gravity="center"
                    android:layout_weight="1" 
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Pilot Embark Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_EmbarkDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" 
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:lines="2"
                    android:text="Pilot Commence Work Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_CommenceWDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" 
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:lines="2"
                    android:text="Pilot Complete Work Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_CompleteWDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" 
                    android:gravity="center"
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Pilot Disembark Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_DisembarkDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" 
                     />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Pilot Boat End Date Time"
                    android:textStyle="bold" 
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/edt_PBEDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" 
                    android:gravity="center"
                     />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn_AddNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                                      
                    android:text="Add Notes"                    
                    android:layout_weight="1" 
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" 
                     android:background="@drawable/button_bluedark">
                </Button> 
                
                <!-- <Button
                    android:id="@+id/btn_AddTugDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                                      
                    android:text="Add Tug Details"                    
                    android:layout_weight="1" 
                    android:textColor="#000000"
                    android:textStyle="bold" >
                </Button>  -->
                
                <Button
                    android:id="@+id/btn_AddDetention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                                      
                    android:text="Add Detention"                    
                    android:layout_weight="1" 
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" 
                    android:background="@drawable/button_bluedark">
                </Button>            

            </TableRow>
        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bg" >
		<Button
            android:id="@+id/btn_TugDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:text="Tug Details"
            android:textColor="#FFFFFF"
            android:textStyle="bold" 
            android:background="@drawable/button_bluedark">
        </Button>
        

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="Complete"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_bluedark" >
        </Button>

        <!-- <Button
            android:id="@+id/btn_Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_Definitions"
            android:layout_alignBottom="@+id/btn_Definitions"
            android:layout_centerHorizontal="true"
            android:text="Note"
            android:textColor="#000000"
            android:textStyle="bold" /> -->
    </RelativeLayout>

</RelativeLayout>